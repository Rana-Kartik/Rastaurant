<!-- showing the item in this page with edit and delete the link so easily can delete and update  -->
<h1>Show Category</h1>
<table border="2">
    <thead>
        <tr>
            <th>itemName</th>
            <th>Description</th>
            <th>price</th>
            <th>displayOrder</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        <% data.forEach(function(tt){ %>
            <tr>
                <td>
                    <%= tt.itemName %>
                </td>
                <td>
                    <%= tt.description %>
                </td>
                <td>
                    <%= tt.price %>
                </td>
                <td>
                    <%= tt.displayOrder %>
                </td>
                <td>
                    <form method="post" action="/category/delete/<%= tt.id %>">
                        <input type="submit" value="Delete" class="btn btn-danger">
                    </form>
                </td>
                <td><a href="/category/update/<%= tt.id %>">Edit</a></td>
            </tr>
            <% }) %>
    </tbody>
</table>